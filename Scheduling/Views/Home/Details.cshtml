@model MyUsersIdentity;

@{ 
    Layout = null;
}

<body>
    <div class="modal-body">
        <div class="form-group">
            <label asp-for="Id">Date</label>
            <input asp-for="Id" class="datepicker" type="text" id="datePicker" />
            <span asp-validation-for="Id" class="field-validation-valid text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" value="@Html.DisplayFor(model => model.Name)" disabled />
            <span asp-validation-for="Name" class="field-validation-valid text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname"></label>
            <input type="text" value="@Html.DisplayFor(model => model.Surname)" disabled />
            <span asp-validation-for="Surname" class="field-validation-valid text-danger"></span>
        </div>

    </div>

    <div class="modal-footer" style="width:100%; position: relative; padding:30px;">
        <div class="center">
            <input type="submit" value="Submit" class="btn btn-primary" onclick="Reload()" />
            <input type="reset" value="Reset" class="btn btn-secondary" />
        </div>
    </div>

</body>
  
