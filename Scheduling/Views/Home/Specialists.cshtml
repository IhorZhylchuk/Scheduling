@{
    ViewData["Title"] = "Home Page";
    Layout = null;
    var error = ViewBag.Error;
    List<string> hours = ViewBag.Hours;
    List<string> gender = new List<string>() { "Man", "Woman" };
    List<string> doctors = new List<string>() { "Allergist/Immunologist", "Cardiologist", "Dermatologist", "Endocrinologist", "Family Physician", "Gastroenterologist", "Internist", "Neurologist", "Ophthalmologist", "Physiatrist", "Pulmonologist" };
}

