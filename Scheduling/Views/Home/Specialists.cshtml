    <link href="~/resources/css/customStyle.css" rel="stylesheet" />
    <link href="~/resources/css/animate.min.css" rel="stylesheet" />
</head>

<body>

    <div id="myModal" class="modal fade" role="form">
        <div class="modal-dialog modal-sm">

            <form asp-action="Reservation" asp-controller="Home" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <center><h4 class="modal-title">Reservation</h4></center>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="Date">Date</label>
                            <input asp-for="Date" type="text" class="datepicker" data-provide="datepicker-inline" />
                            <span asp-validation-for="Date" class="field-validation-valid text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Time">Time</label>
                            <select asp-for="Time" asp-items="new SelectList(hours)">
                            </select>
                            <span asp-validation-for="Time" class="field-validation-valid text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Specialist"></label>
                            <select asp-for="Specialist" asp-items="@new SelectList(doctors)" class="custom-select">
                                <option selected disabled>Choose...</option>
                            </select>
                            <span asp-validation-for="Specialist" class="field-validation-valid text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer" style="width:100%">
                        <div style="position:center">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <input type="reset" value="Reset" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>

            </form>

        </div>

    </div>
    <div class="main-panel">
        <div class="container">
            <a class="btn btn-secondary" style="margin-top:10px; float:right; margin-right:50px" asp-action="LogOut" asp-controller="Home">Logout</a>
        </div>
        <div class="wrapper">
            <div class="sidebar" data-color="orange">

