@model ReservationModel;
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
    List<string> hours = ViewBag.Hours;
    List<string> gender = new List<string>() { "Man", "Woman" };
    List<string> doctors = new List<string>() { "Allergist/Immunologist", "Cardiologist", "Dermatologist",
        "Endocrinologist", "Family Physician", "Gastroenterologist", "Internist", "Neurologist", "Ophthalmologist", "Physiatrist", "Pulmonologist" };
}
@using (Html.BeginForm("Reservation", "Home", FormMethod.Post, new { onsubmit = "return SubmitForm(this)"}))
{
<div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter your name" />
        <label asp-for="Surname">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" placeholder="Enter your surname" />

    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" asp-items="new SelectList(gender)">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TelNumber">Tel. number</label>
        <input asp-for="TelNumber" type="tel" class="form-control" placeholder="+48XXXXXXXXX" />
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" placeholder="Enter your email" />
    </div>
    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" data-provide="datepicker" type="text" />
        <label asp-for="Time">Time</label>
        <select asp-for="Time" asp-items="new SelectList(hours)">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Specialist"></label>
        <select asp-for="Specialist" asp-items="@new SelectList(doctors)" class="custom-select">
            <option selected disabled>Choose...</option>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
</div>
}
