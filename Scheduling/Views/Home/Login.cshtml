@model LoginViewModel;

@{
    Layout = "~/Views/Shared/_MinLayout.cshtml";

}
<link href="~/css/myCss.css" rel="stylesheet" />
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<div class="container">

    <form class="form-horizontal" asp-controller="Home" asp-action="Login" method="post" id="contact_form">
        <fieldset>


            <div class="form-group">
                <label class="col-md-4 control-label">E-Mail</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input placeholder="E-Mail Address" class="form-control" type="email" asp-for="Email">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Password</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input asp-for="Password" placeholder="Password" class="form-control" type="password">
                    </div>
                </div>
            </div>
            <div class="form-group" style="position:center" id="buttonGroup">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4" style="position:center">
                    <div style="position:center">
                        <button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspLogin <span class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                        <button type="reset" class="btn btn-primary">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspReset &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                    </div>
                    <div id="link">
                        <a asp-action="RegisterUser" asp-controller="Home" style="color: blue;position:center">New user?</a>
                    </div>
                </div>

            </div>

        </fieldset>
    </form>
</div>
